<?eclipse.ant.import?>
<project basedir="." default="war" name="Universal Portlet">

    <target name="clean">
        <delete dir="${dir.build}"/>
    </target>

    <target name="init" depends="clean">
        <mkdir dir="${dir.classes}"/>
    </target>

    <target name="compile" depends="init">
        <javac debug="true" debuglevel="${debuglevel}" 
        	destdir="${dir.classes}" 
        	source="${source}" 
        	target="${target}"
        	encoding="${encoding}">
        	<src path="${dir.src}"/>
        	<classpath refid="classpath" />
        	<classpath>
        		<pathelement location="${Model.location}/${dir.build}/${Model.name}"/>
        		<pathelement location="${Platform.location}/${dir.build}/${Platform.name}"/>
           		<pathelement location="${TableComponent.location}/${dir.build}/${TableComponent.name}"/>
				<pathelement location="${CommonUtils.location}/${dir.build}/${CommonUtils.name}"/>
        		<pathelement location="${PortalUtils.location}/${dir.build}/${PortalUtils.name}"/>
        	</classpath>
        </javac>
		<copy todir="${dir.classes}">
			<fileset dir="${dir.src}">
	        	<exclude name="**/*.java"/>
	      	</fileset>
	    </copy>
    </target>

	<target name="war" depends="compile">
		<copy file="${TagLibrary.location}/${dir.build}/${TagLibrary.name}" todir="WebContent/WEB-INF/lib" overwrite="yes" />
	    <war destfile="${dir.build}/${UniversalPortlet.name}" webxml="WebContent/WEB-INF/web.xml">
	    	<classes dir="${dir.classes}"/>
	    	<zipfileset dir="WebContent/WEB-INF" prefix="WEB-INF">
	    		<exclude name="**/web.xml" />
	    	</zipfileset>
	    	<zipfileset dir="WebContent/_UniversalPortlet" prefix="_UniversalPortlet"/>
	    	<zipfileset dir="WebContent/_RoleListPortlet" prefix="_RoleListPortlet"/>
	    	<zipfileset dir="WebContent/_GroupListPortlet" prefix="_GroupListPortlet"/>
	    	<zipfileset dir="WebContent/_ImportRolesPortlet" prefix="_ImportRolesPortlet"/>
	    	<zipfileset dir="WebContent/_ImportGroupsPortlet" prefix="_ImportGroupsPortlet"/>
	    	<zipfileset dir="WebContent/images" prefix="images"/>
	    	<zipfileset dir="WebContent/print" prefix="print"/>
	    </war>
	</target>
	
</project>