<cardLinkPickerAttributeEditorSettings>
	<variants>
		<variant searchAttr="NAME" searchAttrType="string">
			<hierarchyDialog>
				<hierarchy>
					<cardSet alias="organizations" labelAttr="jbr.organization.fullName"
						labelAttrType="text" sortAttr="jbr.organization.fullName" sortAttrType="text"
						sortOrder="asc" collapsed="true"/>
					<cardSet stored="true" alias="persons" labelAttr="jbr.person.lastName" sortAttr="jbr.person.lastName" sortAttrType="string" sortOrder="asc">
						<parent>
							<link targetSet="organizations" linkAttr="jbr.person.organization" isReversed="false" />
						</parent>
					</cardSet>
				</hierarchy>
				<columns>
					<column id="jbr.person.firstName" width="50" sort="asc" />
					<column id="jbr.person.middleName" width="80" sort="asc" />
				</columns>
				<!-- actions>
					<action title="addExternalPersonTitle"
						handler="com.aplana.dbmi.card.actionhandler.AddLinkedCardActionHandler"
						selectionType="none" id="addOrg">
						<parameters>
							<parameter name="template" value="jbr.externalPerson" />
						</parameters>
					</action>
				</actions-->
				<selectableCardCondition>
					<template>jbr.externalPerson</template>
					<status>published</status>
					<status>dictionaryNew</status>
				</selectableCardCondition>
				<!-- <cacheable reloadTime="600"/>  -->
			</hierarchyDialog>
			<search byAttr="true">
				<template>jbr.externalPerson</template>
				<status>published</status>
				<status>dictionaryNew</status>
				<!-- status>doublet</status-->
			</search>
			<searchDependencies>
				<dependency filterAttrId="jbr.person.organization" valueAttrId="jbr.outcoming.receiver"/>
			</searchDependencies>
			<columns>
				<column id="NAME" width="300" link="true" />
				<column id="jbr.person.lastName" width="80" sort="asc"/>
				<column id="jbr.person.firstName" width="50" sort="asc" />
				<column id="jbr.person.position" width="80" sort="asc" />
				<!-- column id="JBR_PERS_ORIG_VALUE"  labelAttrId="JBR_PERS_SNAME" fullReplaceAttrId="JBR_PERS_SNAME" replaceStatusId="6" width="300"/> 
				<column id="JBR_PERS_ORIG_VALUE"  labelAttrId="JBR_PERS_NAME" fullReplaceAttrId="JBR_PERS_NAME" replaceStatusId="6" width="300"/> 
				<column id="JBR_PERS_ORIG_VALUE"  labelAttrId="JBR_PERS_MNAME" fullReplaceAttrId="JBR_PERS_MNAME" replaceStatusId="6" width="300"/--> 
				<column id="_STATE"  fullReplaceAttrId="_TEMPLATE" replaceStatusId="6" width="300"/>	<!-- ���������� ������, �� �� ���������� ��� --> 
			</columns>
		</variant>
	</variants>
	<messages>
		<lang code="en">
			<message key="addExternalPersonTitle" value="Add person" />
			<message key="acceptTitle" value="Ok" />
			<message key="cancelTitle" value="Cancel" />
		</lang>
		<lang code="ru">
			<message key="addExternalPersonTitle" value="��������" />
			<message key="acceptTitle" value="Ok" />
			<message key="cancelTitle" value="������" />
		</lang>
	</messages>
</cardLinkPickerAttributeEditorSettings>