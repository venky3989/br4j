				<exclude name="**/http/*" />
			</fileset>
			<fileset dir="${PlatformJBoss.location}/${dir.classes}" />
		</jar>
		<jar destfile="${ArchivePackage.location}/${PlatformModel.name}">
			<fileset dir="${Platform.location}/${dir.classes}">
