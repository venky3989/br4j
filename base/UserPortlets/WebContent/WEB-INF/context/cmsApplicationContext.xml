<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "../dtd/spring-beans-2.0.dtd">

<beans>

	<import resource="cmsCardAttributeApplicationContext.xml"/>
	<import resource="viewTemplatesApplicationContext.xml"/>

	<bean id="contextApplicationContextProvider" class="com.aplana.cms.ApplicationContextProvider" scope="singleton"/>
	
	<bean id="contentDataServiceFacade" class="com.aplana.cms.ContentDataServiceFacade"  scope="prototype" >
		
		<property name="contentViewService" ref="contentViewServiceAdapter"/>
		
		<property name="contentDataService" ref="contentDataServiceAdapter"/>
		
	</bean>
	
	<!-- defines adapters -->
	<bean id="contentViewServiceAdapter" class="com.aplana.cms.ContentViewConfigAdapter"  scope="prototype" >
			
	</bean>
	<bean id="contentDataServiceAdapter" class="com.aplana.cms.ContentDataAdapter"  scope="prototype" init-method="initServices">
	
	</bean>	
	
	<!--  defines  delegates to legacy code-->
	<bean id="contentDataServiceDelegate" class="com.aplana.cms.ContentProducerDataServiceDelegate"  scope="prototype" >
			
	</bean>
	<bean id="contentViewServiceDelegate" class="com.aplana.cms.ContentProducerViewServiceDelegate"  scope="prototype" >
		
	</bean>	
	
	<bean id="pagedList" class="com.aplana.cms.CmsPagedList"  scope="prototype" >
		
	</bean>	
	
	
</beans>