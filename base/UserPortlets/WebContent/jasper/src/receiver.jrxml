<jasperReport xmlns="http://jasperreports.sourceforge.net/jasperreports" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://jasperreports.sourceforge.net/jasperreports http://jasperreports.sourceforge.net/xsd/jasperreport.xsd" name="correspondent" printOrder="Horizontal" pageWidth="555" pageHeight="842" columnWidth="555" leftMargin="0" rightMargin="0" topMargin="0" bottomMargin="0">
	<property name="ireport.zoom" value="1.0"/>
	<property name="ireport.x" value="0"/>
	<property name="ireport.y" value="0"/>
	<style name="dejavu" isDefault="true" fontName="DejaVu Sans" fontSize="10" pdfFontName="DejaVuSans.ttf" pdfEncoding="Cp1251" isPdfEmbedded="true"/>
	<style name="text" isDefault="false" style="dejavu">
		<box>
			<pen lineWidth="0.0" lineStyle="Solid"/>
		</box>
	</style>
	<style name="dejavu_1" isDefault="true" fontName="DejaVu Sans" fontSize="10" pdfFontName="DejaVuSans.ttf" pdfEncoding="Cp1251" isPdfEmbedded="true"/>
	<style name="dejavu_bold" isDefault="true" fontName="DejaVu Sans" fontSize="10" isBold="true" pdfFontName="DejaVuSans-Bold.ttf" pdfEncoding="Cp1251" isPdfEmbedded="true"/>
	<style name="table_header" isDefault="false" style="dejavu_bold" backcolor="#CCFFFF">
		<box>
			<pen lineWidth="0.5" lineStyle="Solid" lineColor="#000000"/>
		</box>
	</style>
	<style name="text_1" isDefault="false" style="dejavu">
		<box>
			<pen lineWidth="0.0" lineStyle="Solid"/>
		</box>
	</style>
	<style name="text_bold" isDefault="false" style="dejavu_bold"/>
	<style name="table" isDefault="false" style="dejavu">
		<box>
			<pen lineWidth="0.5" lineStyle="Solid" lineColor="#000000"/>
		</box>
	</style>
	<parameter name="card_id" class="java.lang.Long"/>
	<queryString>
		<![CDATA[SELECT
	av_sname_nm.string_value as dreceiver
FROM
	card c
--адресат
left outer join attribute_value av_exec on
	(av_exec.card_id = c.card_id and av_exec.attribute_code = 'JBR_INFD_RECEIVER')
left outer join
	person p_exec on (p_exec.person_id = av_exec.number_value)
left outer join
	attribute_value av_sname_nm on (av_sname_nm.card_id = p_exec.card_id and av_sname_nm.attribute_code = 'JBR_PERS_SNAME_NM')
where c.card_id = $P{card_id}]]>
	</queryString>
	<field name="dreceiver" class="java.lang.String"/>
	<detail>
		<band height="15" splitType="Stretch">
			<textField>
				<reportElement style="table" positionType="Float" stretchType="RelativeToTallestObject" x="0" y="0" width="112" height="15"/>
				<box>
					<topPen lineWidth="0.0"/>
					<leftPen lineWidth="0.0"/>
					<bottomPen lineWidth="0.0"/>
					<rightPen lineWidth="0.0"/>
				</box>
				<textElement textAlignment="Left" verticalAlignment="Top"/>
				<textFieldExpression class="java.lang.String"><![CDATA[$F{dreceiver}!=null && $F{dreceiver}!="" ? ($F{dreceiver}+", "): null]]></textFieldExpression>
			</textField>
		</band>
	</detail>
</jasperReport>
