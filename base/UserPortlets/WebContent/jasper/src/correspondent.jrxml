<jasperReport xmlns="http://jasperreports.sourceforge.net/jasperreports" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://jasperreports.sourceforge.net/jasperreports http://jasperreports.sourceforge.net/xsd/jasperreport.xsd" name="correspondent" printOrder="Horizontal" pageWidth="555" pageHeight="842" columnWidth="555" leftMargin="0" rightMargin="0" topMargin="0" bottomMargin="0">
	<property name="ireport.zoom" value="1.771561000000001"/>
	<property name="ireport.x" value="0"/>
	<property name="ireport.y" value="0"/>
	<style name="dejavu" isDefault="true" fontName="DejaVu Sans" fontSize="10" pdfFontName="DejaVuSans.ttf" pdfEncoding="Cp1251" isPdfEmbedded="true"/>
	<style name="text" style="dejavu">
		<box>
			<pen lineWidth="0.0" lineStyle="Solid"/>
		</box>
	</style>
	<parameter name="card_id" class="java.lang.Long"/>
	<queryString>
		<![CDATA[select
	av_job.string_value as job,
	av_sname_nm.string_value as name
from 	attribute_value av_sign
left outer join -- Должность подписавшего
	attribute_value av_job on (av_job.card_id = av_sign.number_value and av_job.attribute_code = 'JBR_PERS_POSITION')
left outer join -- Фамилия ИО подписавшего
	attribute_value av_sname_nm on (av_sname_nm.card_id = av_sign.number_value and av_sname_nm.attribute_code = 'JBR_PERS_SNAME_NM')
where
	av_sign.card_id = $P{card_id} and av_sign.attribute_code = 'JBR_INFD_SIGN_EXT']]>
	</queryString>
	<field name="job" class="java.lang.String"/>
	<field name="name" class="java.lang.String"/>
	<detail>
		<band height="15" splitType="Stretch">
			<textField>
				<reportElement style="text" x="0" y="0" width="380" height="15"/>
				<textElement textAlignment="Left" verticalAlignment="Middle"/>
				<textFieldExpression><![CDATA[($F{job} != null ? $F{job} : " ")+ " - " +
($F{name} != null ? $F{name} : "")]]></textFieldExpression>
			</textField>
		</band>
	</detail>
</jasperReport>
