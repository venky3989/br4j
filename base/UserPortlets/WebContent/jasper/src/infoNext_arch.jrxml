<jasperReport xmlns="http://jasperreports.sourceforge.net/jasperreports" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://jasperreports.sourceforge.net/jasperreports http://jasperreports.sourceforge.net/xsd/jasperreport.xsd" name="infoNext" pageWidth="555" pageHeight="842" whenNoDataType="NoDataSection" columnWidth="555" leftMargin="0" rightMargin="0" topMargin="0" bottomMargin="0">
	<property name="ireport.zoom" value="1.7715610000000013"/>
	<property name="ireport.x" value="0"/>
	<property name="ireport.y" value="0"/>
	<style name="dejavu" isDefault="true" fontName="DejaVu Sans" fontSize="10" pdfFontName="DejaVuSans.ttf" pdfEncoding="Cp1251" isPdfEmbedded="true"/>
	<style name="dejavu_bold" isDefault="true" fontName="DejaVu Sans" fontSize="10" isBold="true" pdfFontName="DejaVuSans-Bold.ttf" pdfEncoding="Cp1251" isPdfEmbedded="true"/>
	<style name="table_header" style="dejavu_bold" backcolor="#CCFFFF">
		<box>
			<pen lineWidth="0.5" lineStyle="Solid" lineColor="#000000"/>
		</box>
	</style>
	<style name="text" style="dejavu">
		<box>
			<pen lineWidth="0.0" lineStyle="Solid"/>
		</box>
	</style>
	<style name="text_bold" style="table_header"/>
	<style name="table" style="dejavu">
		<box>
			<pen lineWidth="0.5" lineStyle="Solid" lineColor="#000000"/>
		</box>
	</style>
	<parameter name="card_id" class="java.lang.Long"/>
	<parameter name="path" class="java.lang.String" isForPrompting="false"/>
	<parameter name="tz_hour" class="java.lang.Long">
		<defaultValueExpression><![CDATA[new java.lang.Long(java.util.Calendar.getInstance().getTimeZone().getRawOffset() / 3600000)]]></defaultValueExpression>
	</parameter>
	<queryString language="SQL">
		<![CDATA[select

av_num.string_value as num,
av_date.date_value as date,
av_desc.string_value as desc
from
	card c
left outer join -- Тип автора
	attribute_value av_card on (av_card.number_value = c.card_id and av_card.attribute_code = 'ADMIN_277616')
left outer join
	attribute_value av_num on (av_num.card_id = av_card.card_id and av_num.attribute_code ='JBR_REGD_REGNUM')
left outer join
	attribute_value av_date on (av_date.card_id = av_card.card_id and av_date.attribute_code ='JBR_REGD_DATEREG')
left outer join
	attribute_value av_desc on (av_desc.card_id = av_card.card_id and av_desc.attribute_code ='JBR_INFD_SHORTDESC')

where c.card_id = $P{card_id}]]>
	</queryString>
	<field name="num" class="java.lang.String"/>
	<field name="date" class="java.util.Date"/>
	<field name="desc" class="java.lang.String"/>
	<title>
		<band height="30">
			<staticText>
				<reportElement style="table" positionType="Float" mode="Opaque" x="0" y="0" width="555" height="30" backcolor="#CCFFFF"/>
				<textElement textAlignment="Center" verticalAlignment="Middle"/>
				<text><![CDATA[Последующие обращения]]></text>
			</staticText>
		</band>
	</title>
	<detail>
		<band height="30" splitType="Immediate">
			<textField isStretchWithOverflow="true">
				<reportElement style="table" positionType="Float" stretchType="RelativeToTallestObject" x="0" y="0" width="555" height="30" isPrintWhenDetailOverflows="true"/>
				<textElement>
					<font fontName="DejaVu Sans"/>
				</textElement>
				<textFieldExpression><![CDATA[($F{num} != null? "№ " + $F{num}+"; ":"")+($F{date}!=null? "от "+ (new SimpleDateFormat("dd.MM.yyyy")).format($F{date})+"; ":"")
+($F{desc}!=null? $F{desc}:"")]]></textFieldExpression>
			</textField>
		</band>
	</detail>
</jasperReport>
