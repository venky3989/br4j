<?eclipse.ant.import?>
<project basedir="." default="jar" name="SolrModule">

    <target name="clean">
        <delete dir="${dir.build}"/>
    </target>

    <target name="init" depends="clean">
        <mkdir dir="${dir.classes}"/>
    </target>

    <target name="compile" depends="init">
        <echo message="Compiling SolrModule classes"/>
        <javac debug="true" debuglevel="${debuglevel}" 
        	destdir="${dir.classes}" 
        	source="${source}" 
        	target="${target}"
        	encoding="${encoding}">
        	<src path="${dir.src}"/>
        	<classpath refid="classpath"/>
        	<classpath>
        		<pathelement location="${Model.location}/${dir.build}/${Model.name}"/>
            	<pathelement location="${Kernel.location}/${dir.build}/${Kernel.name}"/>        		
        		<pathelement location="${Platform.location}/${dir.build}/${Platform.name}"/>
        		<pathelement location="${CommonUtils.location}/${dir.build}/${CommonUtils.name}"/>
        		<pathelement location="${SharedLib.location}/apache-solr-solrj-1.4.1-dev.jar"/>
        		<pathelement location="${SharedLib.location}/itextpdf-5.5.0.jar"/>
        		<pathelement location="${PDFAConverter.location}/${dir.build}/${PDFAConverter.name}"/>
        		<pathelement location="${SharedLib.location}/ghost4j-0.5.1.jar"/>
        		<pathelement location="${SharedLib.location}/commons-io-1.4.jar"/>
        	</classpath>
        </javac>
		<copy todir="${dir.classes}">
			<fileset dir="${dir.src}">
	        	<exclude name="**/*.java"/>
	      	</fileset>
	    </copy>
		<copy todir="${dir.classes}">
			<fileset dir="conf"/>
	    </copy>    	
    	<copydir src="${dir.src}/META-INF" dest="${dir.classes}/META-INF"/>
    </target>

	<target name="jar" depends="compile">
	    <jar destfile="${dir.build}/${SolrModule.name}">
	        <fileset dir="${dir.classes}"/>
			<manifest>
				<attribute name="Built-By" value="${BuiltBy}"/>
				<attribute name="Specification-Version" value="${Version}"/>
				<attribute name="Class-Path" value="${Model.name}"/>
			</manifest>		
	    </jar>
	</target>
		
</project>